<Page x:Class="SoundWave.App.CinemaListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SoundWave.App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CinemaListPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel 
    Grid.Column="1"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    >
            <ListBox 
        ItemsSource="{Binding SongList}"
        SelectedItem="{Binding SelectedSong}"
        >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="40" Text="{Binding Id}"/>
                            <TextBlock FontSize="40" Text="{Binding Title}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <StackPanel 
    Grid.Column="0"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    >
            <TextBox 
        FontSize="30" 
        Background="LightGray"
        Margin="10"
        x:Name="Input"
        Text="{Binding Input}"/>
            <TextBox 
FontSize="30" 
Background="LightGray"
Margin="10"
x:Name="Input2"
Text="{Binding Input2}"/>
            
<ComboBox Name="Альбомы"
    Height="40" FontSize="30"
    ItemsSource ="{Binding AlbumList}"
    DisplayMemberPath="Name"
/>

            <!--<TextBlock 
        FontSize="30" 
        Background="LightGreen"
        Margin="10"
        x:Name="SelectedFilmTitle"
        Text="{Binding Path=SelectedSong.Title}"/>-->
            <Button 
        Margin="10 10 10 0"
        Height="50"
        Width="300"
        Content="Добавить"
        Background="DarkGreen"
        FontSize="30"
        BorderBrush="Transparent"
        x:Name="Add"
        Command="{Binding AddCommand}"
        />
            <Button 
        Margin="10 10 10 0"
        Height="50"
        Width="300"
        Content="Удалить"
        Background="Red"
        FontSize="30"
        BorderBrush="Transparent"
        x:Name="Delete"
        Command="{Binding DeleteCommand}"
        />
            <Button 
        Margin="10"
        Height="50"
        Width="300"
        Content="Изменить"
        Background="Yellow"
        FontSize="30"
        BorderBrush="Transparent"
        x:Name="Edit"
        Command="{Binding EditCommand}"
        />
        </StackPanel>
    </Grid>
</Page>
